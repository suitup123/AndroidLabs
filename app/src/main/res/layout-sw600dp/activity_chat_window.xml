<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.youma.androidlabs.ChatWindow">

    <ListView
        android:id="@+id/chat_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    
    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/chat_view"
        android:layout_alignParentBottom="true"
        android:text="@string/send_button" />
    
    <EditText
        android:id="@+id/editChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/chat_view"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/sendButton"
        android:hint="@string/edit_chat"/>

    <FrameLayout
        android:id="@+id/isTablet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/chat_view" />

</RelativeLayout>